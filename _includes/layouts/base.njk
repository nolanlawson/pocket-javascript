<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="{{ metadata.favicon }}">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    {% if not environment.dev %}<meta http-equiv="Content-Security-Policy" content="script-src 'self' https://fathom.nolanlawson.com 'sha256-7t3HqvIz5lQyHL2UtdXM4aGDZ2PAqS1b+j+pd0JhcM0='; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; frame-src 'self' https://www.youtube.com; media-src 'self'; object-src 'self'; font-src 'self'; connect-src 'self'; manifest-src 'self'; child-src 'self'; worker-src 'self'">{% endif %}
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    {% if hasYoutube %}<link rel="stylesheet" href="{{ '/css/lite-yt-embed.css' | url }}">{%  endif %}
    {% if hasCode %}<link rel="stylesheet" href="{{  '/css/prism-solarizedlight.css' | url }}">{% endif %}
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    {% if date %}<meta itemprop="datePublished" content="{{ date.toISOString() }}"/>{% endif %}
    <script>
      if (location.hostname !== 'localhost' && location.hostname !== '127.0.0.1') {
        (function (f, a, t, h, o, m) {
          a[h] = a[h] || function () {
            (a[h].q = a[h].q || []).push(arguments)
          };
          o = f.createElement('script'),
            m = f.getElementsByTagName('script')[0];
          o.async = 1;
          o.src = t;
          o.id = 'fathom-script';
          m.parentNode.insertBefore(o, m)
        })(document, window, '//fathom.nolanlawson.com/tracker.js', 'fathom');
        fathom('set', 'siteId', 'UHMYO');
        fathom('trackPageview');
      }
    </script>
  </head>
  <body>
    <header>
      <h1 class="home">
          <a href="{{ '/' | url }}">
              <img class="logo" src="{{ metadata.logo }}" alt="{{ metadata.title }}" width="375" height="93"/>
          </a>
      </h1>

      <h2 class="sub-home">{{ metadata.subtitle }}</h2>

      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      <ul class="nav">
      {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
      </ul>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>

      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
    <!-- / Fathom -->
    {% if hasYoutube %}<script src="/js/lite-yt-embed.js" defer></script>{% endif %}
  </body>
</html>
